// https://school.programmers.co.kr/learn/courses/30/lessons/151141

SELECT B.HISTORY_ID, FLOOR(B.daily_fee * B.DATE * ( 1- IFNULL(P.DISCOUNT_RATE,0)/100)) AS FEE
FROM
(
SELECT A.car_id, A.car_type, A.daily_fee, A.history_id, DATE,
CASE WHEN DATE >= 7 AND DATE < 30 THEN '7일 이상'
WHEN DATE >= 30 AND DATE < 90 THEN '30일 이상'
WHEN DATE >= 90 THEN '90일 이상' ELSE NULL END DURATION_DAY
FROM
(
SELECT C.car_id, C.car_type,C.daily_fee,H.history_id, DATEDIFF(end_date,start_date)+1 AS DATE
FROM CAR_RENTAL_COMPANY_CAR C
JOIN CAR_RENTAL_COMPANY_RENTAL_HISTORY H ON C.CAR_ID = H.CAR_ID
WHERE C.CAR_TYPE = '트럭'
) A
) B
LEFT JOIN CAR_RENTAL_COMPANY_DISCOUNT_PLAN P ON B.DURATION_DAY = P.DURATION_TYPE
AND B.CAR_TYPE = P.CAR_TYPE
ORDER BY FEE DESC, HISTORY_ID DESC
